{
  "name": "careerpath-frontend",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run --coverage --config vitest.config.mts",
    "test:watch": "vitest --watch",
    "serve:ssr:careerpath-frontend": "node dist/careerpath-frontend/server/server.mjs",
    "lint": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.3",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "aos": "^2.3.4",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "swiper": "^12.0.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^1.22.1",
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.4",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/express": "^5.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.17.19",
    "@types/swiper": "^5.4.3",
    "@vitest/coverage-v8": "^4.0.2",
    "angular-eslint": "20.4.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.37.0",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.0",
    "vitest": "^4.0.2"
  },
  "jest-junit": {
    "output": "frontend/junit.xml"
  }
}
